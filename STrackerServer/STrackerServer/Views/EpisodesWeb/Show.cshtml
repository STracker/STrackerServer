@model STrackerServer.Models.Episode.EpisodeView

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span3">
            <img class="img-rounded" src="@Model.Poster" alt="No Artwork"/>  

            <div class="extra-padding"></div>

            <p>
                <a class="btn btn-block btn-primary" href="@Url.Action("Show","TvShowsWeb", new { tvshowId = Model.TvShowId })">@Model.TvShowName</a>
            </p> 

            <p>
                <a class="btn btn-block btn-primary" href="@Url.Action("Show","SeasonsWeb", new { tvshowId = Model.TvShowId, number = Model.SeasonNumber })">Season @Model.SeasonNumber</a>
            </p>    
        </div>
        <div class="span6">
            <div class="box">
                
                <h3>@Model.Name</h3> 
                <p>Season @Model.SeasonNumber, Episode @Model.EpisodeNumber</p> 
                <br/>
                <p>@Model.Description</p>
                <br/>          

                @if (Model.Directors.Count != 0)
                {
                    <p><b>Directors:</b></p>
                    <ul>
                        @foreach(var director in Model.Directors)
                        {
                            <li>@director.Name</li>
                        }                           
                    </ul>
                }     
                @if (Model.GuestActors.Count != 0)
                {
                    <p><b>Guest Actors:</b></p>
                    <ul>
                        @foreach (var actor in Model.GuestActors)
                        {
                            <li>@actor.Name</li>
                        }                           
                    </ul>
                }                     
            </div>
        </div>  
    </div>
</div>