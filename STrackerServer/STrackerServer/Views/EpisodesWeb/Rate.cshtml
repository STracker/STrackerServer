@model STrackerServer.Models.Episode.EpisodeRating

@{
    ViewBag.Title = "Rate";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span3">
            <img class="img-rounded" src="@Model.Poster" alt="No Artwork"/>  

            <div class="extra-padding"></div> 

            <p>
                <a class="btn btn-block btn-primary" href="@Url.Action("Show","EpisodesWeb", new { tvshowId = Model.TvShowId, seasonNumber = Model.SeasonNumber, episodeNumber = Model.EpisodeNumber })">Season: @Model.SeasonNumber Episode: @Model.EpisodeNumber</a>
            </p> 
        </div> 
        <div class="span6">
            <div class="box">
                @Html.ValidationSummary()
                @using (Html.BeginForm("Rate", "EpisodesWeb"))
                {
                    @Html.HiddenFor(rating => rating.TvShowId)
                    @Html.HiddenFor(rating => rating.SeasonNumber)
                    @Html.HiddenFor(rating => rating.EpisodeNumber)
                    @Html.EditorFor(rating => rating.Value)
                    <input class="btn btn-danger btn-mini" type="submit" value="Rate"/>
                }  
            </div>
        </div>
    </div>
</div>