@model STrackerServer.Models.Episode.EpisodeComments

@{
    ViewBag.Title = "Comments";
    Layout = "~/Views/Shared/CommentsLayout.cshtml";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span3">
            <img class="img-rounded" src="@Model.Poster" alt="No Artwork"/>  

            <div class="extra-padding"></div> 

            <p>
                <a class="btn btn-block btn-primary" href="@Url.Action("Show","EpisodesWeb", new { tvshowId = Model.TvShowId, seasonNumber = Model.SeasonNumber, episodeNumber = Model.EpisodeNumber })">Season: @Model.SeasonNumber Episode: @Model.EpisodeNumber</a>
            </p> 
            <p>
                <a id="create-comment" class="btn btn-block btn-primary" href="@Url.Action("CreateComment","EpisodesWeb", new { tvshowId = Model.TvShowId })">Create Comment</a>
            </p>   
        </div> 
        <div class="span6">
            <div class="box">
                <h2>Comments</h2>
            </div>
            
            @if(Model.Comments.Count != 0)
            {
                <div class="box">
                    @foreach(var comment in Model.Comments)
                    {
                        <a href="@Url.Action("Show","UsersWeb", new { id = comment.User.Id })">@comment.User.Name</a>
                        <div class="box-whiter">
                            <div style="text-align: right">
                                @if (Model.IsModerator || User.Identity.IsAuthenticated && comment.User.Id.Equals(User.Identity.Name))
                                {
                                    <a href="@Url.Action("Comment", "TvShowsWeb", new {tvshowId = Model.TvShowId, id = comment.Id })">Edit</a>
                                }
                            </div>
                            @comment.Body
                        </div> 
                    }    
                </div>
            }
        </div>
    </div>
</div>