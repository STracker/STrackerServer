@model STrackerServer.Models.Episode.Options.EpisodeOptions

<img class="img-rounded" src="@Model.Poster" alt="No Artwork"/>  

<div class="extra-padding"></div>

<p>
    <a class="btn btn-block btn-primary" href="@Url.Action("Show","TvShowsWeb", new { tvshowId = Model.TvShowId })">@Model.TvShowName</a>
</p> 

<p>
    <a class="btn btn-block btn-primary" href="@Url.Action("Show","SeasonsWeb", new { tvshowId = Model.TvShowId, number = Model.SeasonNumber })">Season @Model.SeasonNumber</a>
</p> 
