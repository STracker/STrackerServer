@model STrackerServer.Models.User.UserSearchResult

@{
    ViewBag.Title = "Search User";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="row center">
                @using (Html.BeginForm("GetByName", "UsersWeb", FormMethod.Get))
                {
                    <div class="form-inline">
                        <span>Name:</span> 
                        <input id="UserSearch" type="text" name="name" value="@Model.SearchValue" class="input-large"/>
                        <button type="submit" class="btn btn-primary"><b class="icon-search"></b></button>
                    </div>                 
                }
            </div>
        </div>
    </div>
    <div class="row-fluid">
        @foreach(var user in Model.Result)
        {
            <div class="span2" style="text-align: center">
                <div class="box-whiter">
                    <div class="row-fluid">
                        <img src="@user.Photo" alt="No Image"/>
                    </div>
                    <br/>
                    <div class="row-fluid">
                         <a class="btn btn-block btn-primary" href="@Url.Action("Show","UsersWeb", new { id = user.Id })">@user.Name</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
