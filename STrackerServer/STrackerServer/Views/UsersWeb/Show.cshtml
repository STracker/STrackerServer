@model STrackerServer.Models.User.UserPublicView

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span3"> 
            <div style="text-align: center">
                <img class="img-rounded" src="@Model.PictureUrl" alt="No Artwork"/>
            </div> 
            
            @if (User.Identity.IsAuthenticated && !Model.IsFriend)
            {      
                <div class="extra-padding">
                    @using(Html.BeginForm("Invite","UsersWeb"))
                    {
                        @Html.Hidden("id",Model.Id)
                        <input class="btn btn-block btn-primary" type="submit" value="Invite"/>
                    }
                </div>   
            } 

            <div class="extra-padding">
                <p><a class="btn btn-block btn-primary">Friends</a></p>
            </div>       
        </div>
        <div class="span6">
            @if(Model.SubscriptionList.Count != 0)
            {
                <div class="box">
                    <h2>Subscriptions</h2>
                    <br/>
                    <table class="table table-condensed">
                        @foreach(var sub in Model.SubscriptionList)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("Show","TvShowsWeb", new {tvshowId = sub.Id})"></a>@sub.Name
                                </td>
                            </tr>  
                        }
                    </table>
                </div> 
            }           
        </div>
    </div>
</div>