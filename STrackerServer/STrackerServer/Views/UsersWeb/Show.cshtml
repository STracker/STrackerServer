@model STrackerServer.Models.User.UserPublicView

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span3"> 
            <div style="text-align: center">
                <img class="img-rounded" src="@Model.PictureUrl" alt="No Artwork"/>
            </div> 
            @if (User.Identity.IsAuthenticated && !Model.IsFriend)
            {              
                using(Html.BeginForm("Invite","UsersWeb", new { id = Model.Id }))
                {
                    <input class="btn btn-primary" style="width: 300px" type="submit" value="Invite"/>
                }
            } 

            <div class="extra-padding">
                <div class="box">
                    <a>Friends</a>
                </div>
            </div>       
        </div>
        <div class="span9">        
            <div class="box">
                <h2>Subscriptions</h2>
                <br/>
                <table class="table table-condensed">
                    @foreach(var sub in Model.SubscriptionList)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("Show","TvShowsWeb", new {tvshowId = sub.Id})"></a>@sub.Name
                            </td>
                        </tr>  
                    }
                </table>
            </div>     
        </div>
    </div>
</div>