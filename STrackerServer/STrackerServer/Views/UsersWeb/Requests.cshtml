@model STrackerServer.Models.User.Requests

@{
    ViewBag.Title = "Friend Requests";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span3">
            <div class="box">
                <div style="text-align: center">
                    <a href="@Url.Action("Index","UsersWeb")">
                        <img class="img-rounded" src="@Model.PictureUrl" alt="No Artwork"/>
                    </a>
                </div> 
                <div class="extra-padding"></div>
                <p><a class="btn btn-block btn-primary" href="@Url.Action("Friends","UsersWeb")">Friends</a></p>
                <p><a class="btn btn-block btn-primary" href="@Url.Action("Suggestions","UsersWeb")">Sugestions</a></p>
                <p><a class="btn btn-block btn-primary" href="@Url.Action("Requests","UsersWeb")">Friend Requests</a></p> 
                <p><a class="btn btn-block btn-primary" href="@Url.Action("EpisodesWatched","UsersWeb")">Episodes Watched</a></p>  
            </div>
        </div>

        <div class="span6">
            <div class="box center">
                <h2>Friend Requests</h2> 
            </div>
 
            @if (Model.List.Count != 0)
            {
                <div class="box">
                    <table class="table table-condensed">
                        @foreach(var request in Model.List)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("Show","UsersWeb", new { id = request.Id })">@request.Name</a>
                                </td>
                                <td>
                                    @using(Html.BeginForm("RequestResponse","UsersWeb", new {id = request.Id}))
                                    {
                                        @Html.Hidden("accept", true)
                                        <input class="btn btn-mini btn-block btn-success" type="submit" value="Accept" />
                                    }
                                </td>
                                <td>
                                    @using (Html.BeginForm("RequestResponse", "UsersWeb", new { id = request.Id }))
                                    {
                                        @Html.Hidden("accept", false)
                                        <input class="btn btn-mini btn-block btn-danger" type="submit"  value="Reject"/>
                                    }
                                </td>
                            </tr>
                         }
                    </table>     
                </div>
            }       
        </div>
    </div>
</div>
