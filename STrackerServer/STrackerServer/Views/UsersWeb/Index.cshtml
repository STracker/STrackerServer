@model STrackerServer.Models.User.UserPrivateView

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span2">
            <div style="text-align: center">
                <img class="img-rounded" src="@Model.PictureUrl" alt="No Artwork"/>
            </div>   
               
            <div class="extra-padding"></div>
            <p><a class="btn btn-block btn-primary" href="@Url.Action("Friends","UsersWeb")">Friends</a></p>
            <p><a class="btn btn-block btn-primary" href="@Url.Action("Requests","UsersWeb")">Friend Requests</a></p>      
        </div>
    </div>
    <div class="row-fluid">
        <div class="box">
            <h3>Subscriptions</h3> 
        </div>           
    </div>        
    
    @if(Model.SubscriptionList.Count != 0)
    {
        <div class="controls-row" style="padding-left: 35px">
            @foreach (var sub in Model.SubscriptionList)
            {
                <div class="span2" style="text-align: center">
                    <div class="box-whiter">
                        <div class="row-fluid">
                            <img src="@sub.Poster.ImageUrl" alt="No Image"/>
                        </div>
                        <div class="row-fluid">
                            @using (Html.BeginForm("UnSubscribe", "UsersWeb", new { tvshowId = sub.Id, redirectUrl = Url.Action("Index", "UsersWeb") }))
                            {
                                <input class="btn btn-small btn-block btn-danger btn-small" type="submit" value="Unsubscribe"/>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>