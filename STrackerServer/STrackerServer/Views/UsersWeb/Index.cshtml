@model STrackerServer.Models.User.UserPrivateView

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span2">
            <div style="text-align: center">
                <img class="img-rounded" src="@Model.PictureUrl" alt="No Artwork"/>
            </div>   
               
            <div class="extra-padding"></div>
            <p><a class="btn btn-block btn-primary" href="@Url.Action("Friends","UsersWeb")">Friends</a></p>
            <p><a class="btn btn-block btn-primary" href="@Url.Action("Requests","UsersWeb")">Friend Requests</a></p>      
        </div>
        <div class="span7">
            <div class="box">
                <div class="row-fluid">
                    <h2>Subscriptions</h2>
                </div>
            </div>
            <div class="extra-padding"></div>
            @if(Model.SubscriptionList.Count != 0)
            {
                <div class="box">
                    <br/>
                    <div class="row-fluid">
                        @foreach (var sub in Model.SubscriptionList)
                        {
                            <div class="span2">
                                <div class="row-fluid">
                                    <a href="@Url.Action("Show", "TvShowsWeb", new { tvshowId = sub.Id })">
                                        <img class="img-rounded" src="@sub.Poster.ImageUrl" alt="No Artwork"/>
                                    </a>
                                </div>
                                <div class="row-fluid" style="text-align: center">
                                    @using (Html.BeginForm("UnSubscribe", "UsersWeb", new { tvshowId = sub.Id, redirectUrl = Url.Action("Index", "UsersWeb") }))
                                    {
                                        <input class="btn btn-block btn-danger btn-small" type="submit" value="Unsubscribe"/>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }   
        </div>
    </div>
</div>
