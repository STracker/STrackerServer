@model STrackerServer.Models.User.UserPrivateView

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span3">
            <div class="box">
                <div style="text-align: center">
                    <a href="@Url.Action("Index","UsersWeb")">
                        <img class="img-rounded" src="@Model.PictureUrl" alt="No Artwork"/>
                    </a>
                </div> 
                
                <div class="extra-padding"></div>
                <p><a class="btn btn-block btn-primary" href="@Url.Action("Friends","UsersWeb")">Friends</a></p>
                <p><a class="btn btn-block btn-primary" href="@Url.Action("Suggestions","UsersWeb")">Sugestions</a></p>
                <p><a class="btn btn-block btn-primary" href="@Url.Action("Requests","UsersWeb")">Friend Requests</a></p> 
                <p><a class="btn btn-block btn-primary" href="@Url.Action("EpisodesWatched","UsersWeb")">Episodes Watched</a></p> 
                @if(Model.IsAdmin)
                {
                    <a class="btn btn-block btn-primary" href="@Url.Action("SetUserPermission","AdminWeb", new { id = Model.Id })">Permission</a>
                }
            </div>
        </div>

        <div class="span6">
            <div class="box">
                <h2>Subscriptions</h2> 
                <br/>
                <table class="table table-condensed">
                    @if (Model.SubscriptionList.Count != 0)
                    {
                        foreach (var sub in Model.SubscriptionList)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("Show","TvShowsWeb", new { tvshowId = sub.TvShow.Id })">@sub.TvShow.Name</a>
                                </td>
                                <td>
                                    @using (Html.BeginForm("Subscribe", "TvShowsWeb", new { tvshowId = sub.TvShow.Id, redirectUrl = Url.Action("Index", "UsersWeb") }))
                                    {
                                        @Html.Hidden("IsSubscribing",false)
                                        <div style="text-align: right">
                                            <input class="btn btn-mini btn-danger" type="submit" value="Unsubscribe"/>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </table>
            </div>
        </div>
    </div>
</div>