@model STrackerServer.Models.TvShow.TvShowRating

@{
    ViewBag.Title = "Rate";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span3">
            <img class="img-rounded" src="@Model.Poster" alt="No Artwork"/>  

            <div class="extra-padding"></div> 

            <p>
                <a class="btn btn-block btn-primary" href="@Url.Action("Show","TvShowsWeb", new { tvshowId = Model.TvShowId })">@Model.TvShowName</a>
            </p> 
        </div> 
        <div class="span6">
            <div class="box">
                @Html.ValidationSummary()
                @using (Html.BeginForm("Rate", "TvShowsWeb"))
                {
                    @Html.HiddenFor(rating => rating.TvShowId)
                    <p>@Html.EditorFor(rating => rating.Value)</p>
                    <p><input class="btn btn-danger" type="submit" value="Rate"/></p>
                }  
            </div>
        </div>
    </div>
</div>