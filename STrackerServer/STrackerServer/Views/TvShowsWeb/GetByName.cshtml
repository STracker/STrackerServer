@model STrackerServer.Models.TvShow.TvShowSearchResult

@{
    ViewBag.Title = "Search Result";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container-fluid center">
    <div class="row-fluid">
        <div class="span12">
            <div class="row center">
                @using (Html.BeginForm("GetByName", "TvShowsWeb", FormMethod.Get))
                {
                    <input type="text" name="name" value="@Model.SearchValue" class="input-xxlarge search-query" />
                    <button type="submit" class="btn btn-primary"><b class="icon-search"></b></button>
                }
            </div>
        </div>
    </div>
    <div class="row-fluid" style="text-align: center">
        <h3>@Model.Result.Count Results</h3>
    </div>
    <div class="controls-row extra-padding-left">
        @foreach(var tvshow in Model.Result)
        {
             <div class="span2" style="text-align: center">
                 <div class="box-whiter">
                     <div class="row-fluid">
                         <a href="@Url.Action("Show","TvShowsWeb", new { tvshowId = tvshow.Id })">
                             <img src="@tvshow.Poster.ImageUrl" alt="No Image"/>
                         </a>
                     </div>
                 </div>
             </div>
         }
    </div>
</div>