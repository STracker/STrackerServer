@model STrackerServer.Models.TvShow.TvShowCommentsView

@{
    ViewBag.Title = "Comments";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span3">
            @Html.Action("TvShowPartialOptions","TvShowsWeb", new
            {
                tvshowId = Model.TvShowId, 
                unsubscribeRedirectUrl = Url.Action("Comments","TvShowsWeb", new { tvshowId = Model.TvShowId })
            })
        </div> 
        <div class="span6">
     
            <h2>Comments</h2>

            <div class="box">                  
                @foreach(var comment in Model.Comments)
                {
                    <div> 
                        <div class="box-whiter">
                            <div style="text-align: right">
                                @if (User.Identity.IsAuthenticated && comment.UserId.Equals(User.Identity.Name))
                                {
                                    using (Html.BeginForm("Comments", "TvShowsWeb", FormMethod.Post))
                                    {
                                        @Html.Hidden("add", false)
                                        @Html.Hidden("tvshowId", Model.TvShowId)
                                        @Html.Hidden("index", comment.Index)
                                        <input class="btn btn-danger btn-mini" type="submit" value="x"/>
                                    } 
                                }
                            </div>

                            <p>@comment.UserId</p>
                            @comment.Body  
                        </div> 
                    </div>
                }
            </div>
            
            @if(User.Identity.IsAuthenticated)
            {
                <div class="box">       
                    @using (Html.BeginForm("Comments", "TvShowsWeb"))
                    {
                        @Html.Hidden("add", true)
                        @Html.Hidden("tvshowId", Model.TvShowId)
                        <textarea class="btn-block comments-textarea" id="body" name="body"></textarea>
                        <input class="btn btn-primary" type="submit" value="Add Comment"/>
                    }   
                </div>
            }
        </div>
    </div>
</div>

