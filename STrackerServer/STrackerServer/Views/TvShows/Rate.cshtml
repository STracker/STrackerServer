@model STrackerServer.Models.TvShow.TvShowRating

@{
    ViewBag.Title = "Rate";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span3">
            <img class="img-rounded" src="@Model.Poster" alt="No Artwork"/>  

            <div class="extra-padding"></div> 

            <p>
                <a class="btn btn-block btn-primary" href="@Url.Action("Index","TvShows", new { id = Model.Id })">@Model.TvShowName</a>
            </p> 
        </div> 
        <div class="span6">
            <div class="box">
                <h2>@Model.TvShowName</h2> 
                <br/>
                <p><b>Rating: </b> @Model.Rating/5 (from @Model.RatingsCount Users)</p>               

                @Html.ValidationSummary()
                @using (Html.BeginForm("Rate", "TvShows"))
                {
                    @Html.HiddenFor(rating => rating.Id)
                    <div class="form-inline" style="display: inline">
                        <div style="display: inline-block">
                            <b>Your Rating: </b>
                        </div>
                        <div style="display: inline-block">
                            @Html.EditorFor(rating => rating.Value)
                        </div>
                        <div style="display: inline-block">
                            <input class="btn btn-danger" type="submit" value="Rate"/>
                        </div>
                    </div>  
                }  
            </div>
        </div>
    </div>
</div>