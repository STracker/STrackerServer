@model STrackerServer.Models.Home.HomeView

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span3 box">
            <div style="text-align: center">
                <h3>Genres</h3>
                <br/>

                <ul class="nav nav-tabs nav-stacked">
                    @foreach(var genre in Model.Genres)
                    {
                        <li class="navbar-link">
                            <a href="@Url.Action("Show","GenreWeb", new { name = genre.Id })"><b>@genre.Id</b></a>
                        </li>
                    }
                </ul>         
            </div>
        </div>
        <div class="span6">
            <div class="box">
               
            </div>
        </div>
        <div class="span3">
            <div class="box">
                <h2 style="text-align: center">Next Episodes</h2>
                <br/>
                <div class="accordion" id="accordion">
                    @foreach(var obj in Model.NewEpisodes)
                    {
                        <div class="accordion-group">
                            <div class="accordion-heading">
                                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#@obj.TvShow.Id">
                                    @obj.TvShow.Name
                                </a>
                            </div>
                            <div id="@obj.TvShow.Id" class="accordion-body collapse">
                                <div class="accordion-inner">
                                    
                                    <dl>
                                        @foreach(var episode in obj.Episodes)
                                        {
                                            <dt>@episode.Date</dt>
                                            <dd><a href="@episode.Uri">@episode.Name</a></dd>
                                        } 
                                    </dl>
                                     
                                </div>
                            </div>     
                        </div>        
                    }
                </div>
            </div>
        </div>
    </div>
</div>



