@model STrackerServer.Models.Genre.GenreView

@{
    ViewBag.Title = Model.GenreName;
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container-fluid center">
    <div class="row-fluid" style="text-align: center">
        <h3>Genre: @Model.GenreName</h3>
        <br/>
    </div>
    <div class="controls-row extra-padding-left">
        @foreach(var tvshow in Model.TvShows)
        {
             <div class="span2" style="text-align: center">
                 <div class="box-whiter">
                     <div class="row-fluid">
                         <a href="@Url.Action("Show","TvShowsWeb", new { tvshowId = tvshow.Id })">
                             <img src="@tvshow.Poster" alt="No Image"/>
                         </a>
                     </div>
                 </div>
             </div>
         }
    </div>
</div>